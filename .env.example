# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rappit

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# CORS Configuration (SEC-01)
# In production: REQUIRED - comma-separated list of allowed origins
# In development: optional, localhost patterns automatically allowed
# Example: CORS_ORIGIN=https://app.rappit.com,https://admin.rappit.com
CORS_ORIGIN=

# Shopify Integration
SHOPIFY_API_KEY=your_api_key
SHOPIFY_API_SECRET=your_api_secret
SHOPIFY_API_VERSION=2024-01
SHOPIFY_RATE_LIMIT_PER_SECOND=2
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# Shopify OAuth (OAUTH-02)
SHOPIFY_CLIENT_ID=your_shopify_client_id
SHOPIFY_CLIENT_SECRET=your_shopify_client_secret
SHOPIFY_REDIRECT_URI=http://localhost:3000/oauth/shopify/callback

# Token Encryption (OAUTH-01)
# Generate with: openssl rand -hex 32
CREDENTIALS_ENCRYPTION_KEY=your_64_character_hex_key_here


# WooCommerce Integration
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret

# DHL Shipping
DHL_API_KEY=your_dhl_api_key
DHL_API_SECRET=your_dhl_api_secret
DHL_ACCOUNT_NUMBER=your_dhl_account_number

# FedEx Integration
FEDEX_API_KEY=your_api_key
FEDEX_SECRET_KEY=your_secret_key
FEDEX_ACCOUNT_NUMBER=your_account_number
FEDEX_API_URL=https://apis-sandbox.fedex.com
FEDEX_SHIPPER_ACCOUNT=your_shipper_account
FEDEX_BILL_TO_ACCOUNT=your_bill_to_account

# For production, use:
# FEDEX_API_URL=https://apis.fedex.com

# Default Shipper Address (optional - can be set per shipping account)
FEDEX_SHIPPER_NAME=Your Company
FEDEX_SHIPPER_STREET=123 Main St
FEDEX_SHIPPER_CITY=City
FEDEX_SHIPPER_STATE=ST
FEDEX_SHIPPER_POSTAL_CODE=12345
FEDEX_SHIPPER_COUNTRY=US
FEDEX_SHIPPER_PHONE=5551234567

# Observability
LOG_LEVEL=info

# Rate Limiting Configuration (SEC-02)
# Authentication rate limits
RATE_LIMIT_AUTH_IP=5                    # Max login attempts per IP per window
RATE_LIMIT_AUTH_EMAIL=10                # Max login attempts per email per window
RATE_LIMIT_AUTH_WINDOW=900              # Window duration in seconds (15 min)

# Account lockout settings
RATE_LIMIT_LOCKOUT_ATTEMPTS=10          # Failed attempts before lockout
RATE_LIMIT_LOCKOUT_DURATION=1800        # Lockout duration in seconds (30 min)

# Webhook rate limits
RATE_LIMIT_WEBHOOK_IP=100               # Max webhook requests per provider IP per minute
RATE_LIMIT_WEBHOOK_ORG=500              # Max webhook requests per organization per minute

# General API rate limits
RATE_LIMIT_API_USER=100                 # Max API requests per user per minute
